@model Ticket_Train.Models.User
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/Auth.js"></script>
<link rel="stylesheet" href="~/css/Register.css">
<form id="register" method="post" class="content">
    <div id="reg-form" class="auth">

            <div class="auth__header">
                <h2>Đăng ký</h2>
            <a class="login" href="@Url.Action("Login", "Account")">Đăng nhập</a>
            </div>

            <div class="auth__form">

            <div class="form-control" style=" border:none ;">
                    <label for="username">TÀI KHOẢN<i style=" color:red">*</i></label>
                <input asp-for="Name" id="registerName" placeholder="Nhập tên đăng nhập" required />
                </div>

            <div class="form-control" style=" border:none ;" >
                    <label for="email">EMAIL<i style=" color:red">*</i></label>
                <input asp-for="Email" type="email" id="registerEmail" placeholder="abcd@gmail.com" required />
                </div>

            <div class="form-control" style=" border:none ;">
                    <label for="password">MẬT KHẨU<i style=" color:red">*</i></label>
                <input asp-for="Password" type="password" id="registerPassword" placeholder="Nhập mật khẩu" required />
                </div>
            <div class="form-control" style=" border:none ;">
                <label for="password">XÁC NHẬN MẬT KHẨU<i style=" color:red">*</i></label>
                <input asp-for="Password" type="password" id="password" placeholder="Nhập mật khẩu" required />
            </div>
                <button class="auth_btn" id="btnReg" type="submit" >Đăng ký ngay </button>
            </div>
    </div>
</form>








@* Hiển thị thông báo lỗi *@
